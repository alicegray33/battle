<html>
  <head>
    <title>Road Battle!</title>
    <style>
      body {
        background-image: url('/images/background.jpg');
        background-repeat: no-repeat;
        background-attachment: fixed; 
        background-size: cover;
        background-color:rgb(40, 40, 40);
      }
      </style>
  </head>
  <body>
    <br>
    <div name="title" style="text-align:center; font-family: fantasy; color: red; font-size:70pt; font-weight: bold;">
      <%= @game.winner.name %> defeats <%= @game.loser.name %>!<br>
    </div>
    <div name="player_image" style="text-align:center">
    <% if @game.winner == @game.player_1 %>
      <img src="/images/player1.png" alt="Player 1 Image" height="40%">
    <% else %>
      <img src="/images/player2.png" alt="Player 2 Image" height="40%">
    <% end %>
    </div>
    <div name="new_game" style="text-align:center; font-family: fantasy; color: black; font-size:28pt;">
      <a href="/">New Game</a>
    </div>
  </body>
</html>

